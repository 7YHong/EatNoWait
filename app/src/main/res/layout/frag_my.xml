<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--头部的图片-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/my_picture"
                android:src="@drawable/my_picture"
                android:adjustViewBounds="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/my_picture"
                android:layout_alignBottom="@id/my_picture"
                android:layout_centerHorizontal="true"
                android:layout_margin="16sp"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_marginBottom="16sp"
                    android:src="@drawable/my_logo"
                    android:adjustViewBounds="true"/>
                <Button
                    android:layout_width="200sp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="点击登录"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:background="@drawable/my_loginbtn"/>
            </LinearLayout>
        </RelativeLayout>
        <include layout="@layout/my_item"/>
        <android.widget.Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />
        <com.dreamstations.eatnowait.eatnowait.View.Custom_My_Item
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:my_item_icon="@drawable/my_orders"
            custom:my_item_text="我的订单"/>
        <com.dreamstations.eatnowait.eatnowait.View.Custom_My_Item
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:my_item_icon="@drawable/my_chart"
            custom:my_item_text="健康饮食"/>
        <com.dreamstations.eatnowait.eatnowait.View.Custom_My_Item
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:my_item_icon="@drawable/my_report"
            custom:my_item_text="消费报表"/>
        <com.dreamstations.eatnowait.eatnowait.View.Custom_My_Item
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:my_item_icon="@drawable/my_record"
            custom:my_item_text="退单记录"/>
        <com.dreamstations.eatnowait.eatnowait.View.Custom_My_Item
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:my_item_icon="@drawable/my_settings"
            custom:my_item_text="设置"/>
        <com.dreamstations.eatnowait.eatnowait.View.Custom_My_Item
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:my_item_icon="@drawable/my_logout"
            custom:my_item_text="注销"/>
    </LinearLayout>
</ScrollView>